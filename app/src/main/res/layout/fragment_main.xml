<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context=".screen.MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:clipToPadding="false"
        android:paddingVertical="16dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <include android:id="@+id/first_item" layout="@layout/item_famous"/>
            <include android:id="@+id/second_item" layout="@layout/item_famous"/>
            <include android:id="@+id/third_item" layout="@layout/item_famous" />
            <include android:id="@+id/fourth_item" layout="@layout/item_famous"/>
        </LinearLayout>
    </ScrollView>
    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/fragment"
        android:layout_height="match_parent"/>
</FrameLayout>